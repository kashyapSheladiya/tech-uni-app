<div class="row">
    <div class="col s12">
      <h3 class= "center-align"><b>Courses List</b></h3>
    </div>
</div>

<div class="row">
  <% @courses.each do |course| %>
    <div class="col s6 m6">
      <div class="card orange darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= course.short_name%>: <%= course.name %></span>
          <%= course.description %>
        </div>
        <div class="card-action blue">
          <a href="#">Enroll</a>
          <a href="#">info</a>
        </div>
      </div>
    </div>
  <% end %>
</div>